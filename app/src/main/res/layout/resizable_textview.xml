<?xml version="1.0" encoding="utf-8"?>

<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center" >

    <TextView
        android:id="@+id/textview"
        tools:text="@string/hello_world"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:textSize="36sp"
        android:gravity="center"
        android:layout_gravity="center"
        android:padding="3dp"
        android:layout_margin="12dp"
        android:background="@drawable/textview_border"/>

    <ImageView android:id="@+id/remove_view"
        style="@style/ResizableControl"
        android:layout_gravity="left|top"
        android:src="@drawable/ic_close" />

    <ImageView android:id="@+id/size_view"
        style="@style/ResizableControl"
        android:layout_gravity="right|bottom"
        android:src="@drawable/ic_ingrandisci" />

    <ImageView android:id="@+id/rotate_view"
        style="@style/ResizableControl"
        android:layout_gravity="left|bottom"
        android:src="@drawable/ic_ruota"  />

    <ImageView android:id="@+id/edit_view"
        style="@style/ResizableControl"
        android:layout_gravity="right|top"
        android:src="@drawable/ic_image_edit"  />
</merge>